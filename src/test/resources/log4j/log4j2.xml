<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<!-- File Appender -->
		<File name="LogFile" fileName="AmazonErrorLog.log" append="true">
			<PatternLayout
				pattern="%d{dd-MMM-yyyy HH:mm:ss.SSS}  %level  [%t] %logger{36} [%M] - %msg%n%ex%n" />
		</File>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="amazonTestCases" level="trace" additivity="false">
			<AppenderRef ref="LogFile" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
		<!-- <Logger name="src/main/resourceFiles" level="INFO" additivity="false"> 
			<AppenderRef ref="LogFile" /> </Logger> -->
		<!-- <Root level="trace"/> -->
	</Loggers>
</Configuration>
